# Server
PORT=3000

# Authentication
BETTER_AUTH_URL=http://localhost:3000/api/auth

# Default Admin User (Optional - for initial setup)
# If set, creates an admin user on first startup
# DEFAULT_ADMIN_EMAIL=admin@example.com
# DEFAULT_ADMIN_PASSWORD=changeme123
# DEFAULT_ADMIN_NAME=Admin

# Database
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=maid2

# LLM Providers (Optional)
# OpenAI - Required if using OpenAI provider for chat or embeddings
# OPENAI_API_KEY=your-openai-api-key-here

# Ollama - Optional, defaults shown
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_KEEP_ALIVE=24h

# Aliyun Dashscope - Required if using Dashscope for text embeddings ONLY (not for chat)
# DASHSCOPE_API_KEY=your-dashscope-api-key-here
# DASHSCOPE_EMBEDDING_URL=https://dashscope.aliyuncs.com/api/v1/services/embeddings/text-embedding/text-embedding
# DASHSCOPE_EMBEDDING_MODEL=text-embedding-v4

# Model Configuration (Optional)
# OPENAI_MODEL=gpt-4.1
# OLLAMA_MODEL=alibayram/Qwen3-30B-A3B-Instruct-2507
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# OLLAMA_EMBEDDING_MODEL=qwen3-embedding
